{
    "description": "Flexible FQCN Finder",
    "name": "brenoroosevelt/flex-fqcn-finder",
    "authors": [
        {
            "name": "Breno Roosevelt",
            "email": "breno.roosevelt@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/simple-cache": "1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6 || ^9",
        "squizlabs/php_codesniffer": "3.5.*",
        "phpstan/phpstan": "^0"
    },
    "suggest": {
        "symfony/cache": "@stable"
    },
    "autoload": {
        "psr-4": {
            "FlexFqcnFinder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FlexFqcnFinder\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "phpunit tests",
            "phpcs -p src tests",
            "phpstan analyse src"
        ],
        "test": [
            "phpunit tests"
        ]
    }
}
